{% if items|length > 0 %}
<div class="flyntComponent"is="flynt-block-featured-post">
  <div class="container">
    {% for item in items %}
    <div class="cover">
      <img class="figure-image lazyload"
        src="{{ item.thumbnail.src|resizeDynamic(1920) }}"
        srcset="{{ placeholderImage(1920, 1920 / item.thumbnail.aspect) }}"
        data-srcset="
          {{ item.thumbnail.src|resizeDynamic(1920) }} 1920w,
          {{ item.thumbnail.src|resizeDynamic(1320) }} 1320w,
          {{ item.thumbnail.src|resizeDynamic(1280) }} 1280w,
          {{ item.thumbnail.src|resizeDynamic(1035) }} 1035w,
          {{ item.thumbnail.src|resizeDynamic(860) }} 860w,
          {{ item.thumbnail.src|resizeDynamic(750) }} 750w,
          {{ item.thumbnail.src|resizeDynamic(500) }} 500w,
          {{ item.thumbnail.src|resizeDynamic(375) }} 375w"
        data-sizes="auto"
        alt="{{ item.thumbnail.alt|e }}">
    </div>
    <div class="box">
      <div class="box-inner">
        <a href="{{ item.link }}" class="content-readMore" aria-hidden="true" tabindex="-1">
          <h2 class="exhibition-title">{{ item.title }}</h2>
        </a>
        <h3 class="exhibition-subtitle h3">{{ item.subtitle }}</h3>
        <div class="exhibition-info">
          <span>{{ item.postType }}</span>
          <span>{{ item.postDate|date("d.m.Y") }}</span>
          <span>{{ item.postTime|date("g:i a") }}</span>
        </div>
        {# <p class="content-excerpt">{{ item.preview.read_more(false).length(18) }}</p> #}
      </div>
    </div>
    {% endfor %}
    <div class="label">
      <span>Current</span>
    </div>
  </div>
</div>
{% endif %}
