<div class="flyntComponent componentSpacing" is="flynt-block-qa-sidebar">
  <div class="container">
    <div class="contentWrapper">
      <div class="sidebar">
        {{ sidebarHtml|e('wp_kses_post') }}
      </div>
      <div class="content">
        <ul class="qa">
        {% for panel in qaPanels %}
          <li class="panel">
            <button class="panel-question" type="button" aria-expanded="false" aria-controls="content-{{ loop.index }}">
              {{ panel.panelQuestion|e }}
            </button>
            <div class="panel-answer" aria-hidden="true" id="content-{{ loop.index }}">
              {{ panel.panelAnswer|e('wp_kses_post') }}
            </div>
          </li>
        {% endfor %}
      </ul>
      </div>
    </div>
  </div>
</div>
