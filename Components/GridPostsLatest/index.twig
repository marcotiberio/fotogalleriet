{% if items|length > 0 %}
  <div class="flyntComponent boxPadding" is="flynt-grid-posts-latest">
    <div class="container">
      {% if preContentHtml %}
        <div class="preContent h3">
          {{ preContentHtml|e('wp_kses_post') }}
          <div class="separator"></div>
        </div>
      {% endif %}
      <ul class="grid grid--columns{{ options.columns }} boxPadding">
        {% for item in items %}
          <li class="grid-item">
            <div class="content">
              <a href="{{ item.link }}" class="content-link" title="{{ item.title }}">
                <div class="content-inner">
                  <div class="content-inner-top">
                    <div class="content-inner-top--left">
                      {% if item.postType %}
                      <span>{{ item.postType }}</span>
                      {% endif %}
                      {% if item.postTime %}
                      <span>{{ item.postTime|date("g:i") }}</span>
                      {% endif %}
                    </div>
                    <div class="content-inner-top--right">
                      {% if item.postDate %}
                      <span>{{ item.postDate|date("n") }}</span>
                      {% endif %}
                      {% if item.postDate %}
                      <span>{{ item.postDate|date("M") }}</span>
                      {% endif %}
                    </div>
                  </div>
                  <div class="content-inner-bottom">
                    <div class="content-title h3">{{ item.title }}</div>
                    <div class="content-subtitle h4">{{ item.subtitle }}</div>
                    {# <p class="content-excerpt">{{ item.preview.read_more(false).length(18) }}</p> #}
                  </div>
                </div>
                <img class="content-image lazyload"
                  src="{{ item.thumbnail.src|resize(32) }}"
                  data-srcset="{{function('wp_get_attachment_image_srcset', item.thumbnail.id)}}"
                  data-sizes="auto">
              </a>
              <footer class="content-footer">
                {# <span class="content-readingTime">
                  <i data-feather="clock"></i> {{ item.content | readingtime }} {{ labels.readingTime }}
                </span> #}
                {# <a href="{{ item.link }}" class="button button--link content-readMore" aria-hidden="true" tabindex="-1">{{ labels.readMore }}</a> #}
              </footer>
            </div>
          </li>
        {% endfor %}
      </ul>
      {# <div class="allPostsLink">
        <a href="{{ postTypeArchiveLink }}" class="button button--link">{{ labels.allPosts }}</a>
      </div> #}
    </div>
  </div>
{% endif %}
